{% extends 'base1.html.twig' %}

{% block body %}
<br><br>
 <div class="row">
            <div class="col-lg-6 wp2 delay-05s animated fadeInUp">   
    

              <div class="movie-disc">
              <div class="movie-avatar">
                      <div class="movie-avatar-img">
                            <img src="{{ 'http://image.tmdb.org/t/p/w500'~ obj.poster_path }}" alt="">
                      </div><!-- /.movie-avatar-img --> 
                  </div><!-- /.movie-disc --> 
              </div><!-- /.movie-avatar --> 

            </div><!-- /.col-lg-6 -->
            
            <div class="col-lg-6 wp2 delay-1s animated fadeInUp">  
            <h2>{{obj.title}}</h2>
            <h4 class="sub-text">Release Date: {{obj.release_date|date('j. F Y')}} <br>
            
            </h4>
            
          
            
            <table class="text-dark">

                    <tbody><tr><td>Year </td>  <td>&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;</td><td>{{obj.release_date|date('Y')}}</td></tr>
                    
                    <tr><td>By </td>    <td>&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;</td><td>
                      {% for country in obj.production_countries %}
                        {{ country.name }}
                        {% if not loop.last %},{% endif %}
                    {% endfor %}
                    </td></tr>
                    
                    <tr><td>Slogan </td><td>&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;</td><td>{{obj.tagline}}</td></tr>
                    
                    <tr><td>Genre </td><td>&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;</td><td>
                    {% for genre in obj.genres %}
                        {{ genre.name }}
                        {% if not loop.last %},{% endif %}
                    {% endfor %}
                    </td></tr>
                    
                    <tr><td>Time </td><td>&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;</td><td>{{obj.runtime}} min.</td></tr>
                    
                    <tr><td>Budget </td><td>&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;</td><td>${{ (obj.budget)|number_format(2, '.', ',') }}</td></tr>
                     
                    <tr><td>Age </td>   <td>&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;</td><td><span class="detailed-text">12+</span></td></tr>           

            </tbody></table>
            <br>
            

            <p>{{ obj.overview }}
            <br>

            </p><div class="detailed">
            Rating:&nbsp;&nbsp; 
            <a href="{{ 'https://www.imdb.com/title/'~ obj.imdb_id }}"> 
            <span>IMDb &nbsp;<b>/  {{obj.vote_average}} <i class="fa fa-star " style="color: #FF8800"></i></b></span> </a>
            
            </div> 
            <p></p> 
            </div><!-- /.col-lg-6 -->
        </div>
{% endblock %}